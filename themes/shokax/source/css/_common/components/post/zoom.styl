/* 图片缩放样式 */
.zoom-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.8);
  z-index: 9999;
  display: none;
}

.zoom-img {
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  max-width: 90%;
  max-height: 90%;
  z-index: 10000;
  box-shadow: 0 0 20px rgba(0, 0, 0, 0.5);
  display: none;
  cursor: pointer;
} 